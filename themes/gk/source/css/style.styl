.b-page
	background #FFFAFA
	color #000
	font-family font_grotesk
	margin 0
	padding 0
	&--black
		background #0c0c0c
		color #fff

.nobr
	white-space nowrap

a
	color blue
	&:hover
		text-decoration none
	&:visited
		color #000

h1
	font-family font_grotesk

h2
	font-family font_grotesk
	font-weight 700
	line-height 1.1
	margin-top 1.3em
	margin-bottom .5em

