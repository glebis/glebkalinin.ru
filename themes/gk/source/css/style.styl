.header
	// center(max_width = body_width)
	// background rgba(0,0,0,.05)
	// background url(/images/bg.jpg) center bottom no-repeat
	// background-size cover
	// min-height 400px
	background #eee
	margin 0 0 1em 0
	padding 10px 0
	position relative
	&__wrapper
		width 58em
		margin 20px auto 0
	.logo
		font-weight 600
		line-height 1em
		text-shadow 1px 1px 0 rgba(255,255,255,.9)
		margin 0


.b-page--inner 
	.header
		// min-height 220px
		&__wrapper
			margin-top 30px
			margin-bottom 30px

.b-page--black
	.logo
		a
			color: white		

.popular-link
	font-size .8em
	a
		color #000

.photo-avatar
	float left
	width 100px
	height 100px
	margin 0 10px 10px 0
	border-radius 50px

.subscribe_link
	font-size .8em

.social-widget
	float right
	clear both
	// position absolute
	// top 0
	// right 0
	overflow hidden
	width 180px
	// height 60px
	margin 10px 0 0 0
	// width 190px
	// color white
	&__headline
		margin 0 0 .6em
		font-weight normal
		font-size .8em
	&__twitter
	&__facebook
		float left
		height 20px
	&__twitter
		width 110px
	&__facebook
		width 70px
		height 40px
		overflow hidden
		border none
bp(bp_mobile, false)
.header
	padding 1em
	min-height 100px
	&__wrapper
		margin 1em 0
		width auto

.social-widget
	position static
	float none
	width auto
	margin 1em 0
	&__twitter
	&__facebook
		float none
		display inline-block
		height 40px

endbp()		

.search-form
	margin 5px 0 0 0
	float right
	// display none
	&__field
		border 1px solid #000
		background rgba(255,255,255,.7)
		border-radius 3px
		padding	5px
		width 180px
		// box-shadow inset 5px 5px 8px rgba(0, 0, 0, 0.15);

bp(bp_mobile, false)
.subscribe_link
	display block
.search-form
	float none
	&__field
		width 100%
endbp()
