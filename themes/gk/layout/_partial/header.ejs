      <% if (is_home()){ %>
      <h1 class="logo">
        <span class="logo__text">
          <%= config.title %>
        </span>
      </h1>
      
      <% } 
      else { %>
      <h2 class="logo"><a href="/" class="logo__text"><%= config.title %></a></h2>
      <% } %>
      <p class="logo__tagline">Картография целой жизни</p>
    

    <ul class="categories">
      <% for (var i in theme.menu){ %>
          <li class="categories__item"><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
        <% } %>
    </ul>
